<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6E4FF"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView_homeBT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#88C92E"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_homeLink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#00FFFFFF"
            android:text="LINK"
            android:textColor="#FF7A68"
            android:textSize="18sp" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar_w"
        android:layout_width="318dp"
        android:layout_height="21dp"
        android:layout_marginTop="454dp"
        android:layout_marginEnd="60dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_w" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="453dp"
        android:text="W"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_c" />

    <SeekBar
        android:id="@+id/seekBar_c"
        android:layout_width="318dp"
        android:layout_height="21dp"
        android:layout_marginEnd="60dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_w" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="C"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/imageButton_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/all_on"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_gravity="center|center_horizontal|center_vertical">

    </pl.droidsonroids.gif.GifImageButton>

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/imageButton_R"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/r_on"
        android:scaleType="fitXY"
        app:layout_column="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_row="0" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/imageButton_G"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/g_on"
        android:saveEnabled="false"
        android:scaleType="centerCrop"
        app:layout_column="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_gravity="center|center_horizontal|center_vertical"
        app:layout_row="1" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/imageButton_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/b_on"
        android:scaleType="centerCrop"
        app:layout_column="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_gravity="center|center_horizontal|center_vertical"
        app:layout_row="1" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/imageButton_P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="152dp"
        android:background="@drawable/p_on"
        android:scaleType="centerCrop"
        app:layout_column="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_gravity="center|center_horizontal|center_vertical"
        app:layout_row="3" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/imageButton_Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/y_on"
        android:scaleType="centerCrop"
        app:layout_column="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_gravity="center|center_horizontal|center_vertical"
        app:layout_row="2" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/pick_color_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="130dp"
        android:background="@drawable/color_on"
        android:scaleType="centerCrop"
        app:layout_column="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_gravity="center|center_horizontal|center_vertical"
        app:layout_row="0" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/imageButton_Rainbow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rainbow_on"
        android:scaleType="centerCrop"
        app:layout_column="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_row="3" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/imageButton_BG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginStart="32dp"
        android:layout_marginTop="226dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_on"
        android:scaleType="centerCrop"
        app:layout_column="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_gravity="center|center_horizontal|center_vertical"
        app:layout_row="0" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/imageButton_Flash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginStart="32dp"
        android:layout_marginTop="374dp"
        android:background="@drawable/flash_on"
        android:scaleType="centerCrop"
        app:layout_column="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_row="2" />

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/imageButton_Breath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:layout_marginTop="374dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/breath_on"
        android:scaleType="centerCrop"
        app:layout_column="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_row="2" />


</androidx.constraintlayout.widget.ConstraintLayout>